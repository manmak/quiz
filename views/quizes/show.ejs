<div class="panel-heading">
	<h3 class="panel-title">Pregunta: <%= quiz.pregunta %></h3>
</div>
<div class="panel-body">
	<form class="form-horizontal" method="get" action="/quizes/<%= quiz.id %>/answer" role="form">
		<div class="form-group">
			<label for="respuesta" class="col-sm-2 control-label">Respuesta</label>
			<div class="col-sm-10">
		    	<input type="text" class="form-control" name="respuesta" id="respuesta" placeholder="Escriba aquÃ­ su respuesta">
		    </div>
		</div>
	    <div class="form-group">
		    <div class="col-sm-offset-2 col-sm-10">
				<input type="submit" class="btn btn-default" value="Enviar">
			</div>
		</div>
	</form>
	<div class="table-responsive">
		<table class="table table-striped">
			<caption>Comentarios</caption>
			<tbody>
				<% for (index in quiz.Comments) { %>
						<% if (quiz.Comments[index].publicado || session.user) { %>
						<tr>
							<td><%= quiz.Comments[index].texto %></td>
							<td>
								<% if (!quiz.Comments[index].publicado && session.user) { %>
									<div class="pull-right">
										<a class="btn btn-success" href="/quizes/<%= quiz.id %>/comments/<%= quiz.Comments[index].id %>/publish">Publicar</a>
									</div>
								<% } %>
							</td>
						</tr>
						<% } %>
				<% } %>
			</tbody>
		</table>
	</div>
	<a class="btn btn-primary" href="/quizes/<%= quiz.id %>/comments/new">Nuevo comentario</a>
</div>
