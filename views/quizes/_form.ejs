<div class="form-group">
	<label for="pregunta" class="hidden-xs col-sm-2 control-label">Pregunta</label>
	<div class="col-xs-12 col-sm-10">
    	<input type="text" class="form-control" name="quiz[pregunta]" id="pregunta" value="<%= quiz.pregunta %>" placeholder="Escriba aquí su pregunta" />
    </div>
</div>
<div class="form-group">
	<label for="respuesta" class="hidden-xs col-sm-2 control-label">Respuesta</label>
	<div class="col-xs-12 col-sm-10">
    	<input type="text" class="form-control" name="quiz[respuesta]" id="respuesta" value="<%= quiz.respuesta %>" placeholder="Escriba aquí su respuesta" />
    </div>
</div>
<div class="form-group">
	<label for="tema" class="hidden-xs col-sm-2 control-label">Índice temático</label>
	<div class="col-xs-12 col-sm-10">
		<select class="form-control" name="quiz[tema]" id="tema">
			<option value="otro" <% if (['humanidades','ocio','ciencia','tecnologia'].indexOf(quiz.tema) < 0) { %> selected<% } %>>Otro</option>
			<option value="humanidades" <% if ('humanidades' === quiz.tema) { %> selected<% } %>>Humanidades</option>
			<option value="ocio" <% if ('ocio' === quiz.tema) { %> selected<% } %>>Ocio</option>
			<option value="ciencia" <% if ('ciencia' === quiz.tema) { %> selected<% } %>>Ciencia</option>
			<option value="tecnologia" <% if ('tecnologia' === quiz.tema) { %> selected<% } %>>Tecnología</option>
		</select>
    </div>
</div>
<div class="form-group">
	<div class="col-sm-offset-2 col-sm-10">
		<a class="btn btn-default" href="/quizes">Cancelar</a>
		<input type="submit" class="btn btn-primary" value="Salvar" />
	</div>
</div>